<!DOCTYPE html>
<html>
<head>
  <title>Remenberme</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.7&appId=1080540658695760";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<nav class="navbar navbar-inverse navbar-fixed-top">
<div class="container-fluid">
   <div class="col-sm-12">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Rememberme</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <% if signed_in? %>
        <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="users/<%= current_user.id%>">Profile
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="/users/<%= current_user.id %>">  My profile</a></li>
          <li><a href="/users/<%= current_user.id %>/edit"> Edit Profile</a></li>
          </ul>
      </li>

        <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="/question_themes/index">Question
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="/questions/new">  New Question ?</a></li>
          <li><a href="/mysummits"> My questions</a></li>
          <li><a href="/questions"> All questions</a></li>
        </ul>
      </li>
      <li class="dropdown">
         <a class="dropdown-toggle" data-toggle="dropdown" href="/users/<%= current_user.id %>/answers">Answers
        <span class="caret"></span></a>
         <ul class="dropdown-menu">
        <li><a href="/questions/new">  My Answers</a></li>
        </ul>
      </li>
       <li class="dropdown">
         <a href="/mysummits">Submits</a>
      </li>
        <% else %> 
              
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% #if current_user.id != nil %>
        <% if signed_in? %>
        <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
        <% else %> 
        <li><a href="/users/sign_in"> <i class="fa fa-sign-in fa-lg" aria-hidden="true"></i>
</a></li>
        <div class="fb-login-button" data-max-rows="1" data-size="medium" data-show-faces="false" data-auto-logout-link="false"></div>
        <% end %>
      </ul>
    </div>
 </div>
  </div>
</nav>

 

<%= yield %>


</body>
</html>




    

