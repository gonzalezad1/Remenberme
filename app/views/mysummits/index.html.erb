<!DOCTYPE html>
<html lang="en">
<head>
  <title>Rememberme</title>

</head>
<body background="../assets/essai17.png" id="bg">
 
<div class="container text-center">

  <div class="row">
    <div class="col-sm-2 well">
      <%i=0%>
      <% while i<5 %>
        <div class="well">
          <%j=0%>
          <%h=0%>
            <%while j< rand(1..9)%>
              <br>
              <%j=j+1 %>
            <%end%>
          <p>ADS</p>
            <%while h < j%>
              <br>
              <%h=h+1 %>
            <%end%>
        </div>
      <%i=i+1 %>
      <%end%>
    </div>
    <div class="col-sm-8">
    	<div class="color_h2">
        <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <div align="center">
              <h1> My Questions submitted </h1>
              </div>  
            </div>
          </div>
        </div>
      </div>
		</div>
      <% @question.each do |q| %>
        <% if q.user_id == current_user.id %>
        <div class="row">
          <div class="col-sm-12">
            <div class="panel panel-default text-left">
              <div class="panel-body">
                <p >
			         	 <%= q.question_title %>
				          <a href="/questions/<%=q.id%>/answers" class="btn btn-primary" role="button">Show</a>
  				        <a href="/questions/<%=q.id%>/edit" class="btn btn-primary" role="button">Edit</a>
          				<%= link_to 'Delete',  question_path(q), method: :delete, data: { confirm: 'Are you sure?' } %>			
                  <br>
  		  		    </p>
              </div>
            </div>
          </div>
        </div>
        <% end %>	
      <% end %> 		
      <br>
    
      <div class="color_h2">
        <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <div align="center">
              <h1> My Answers submitted </h1>
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>

   <% @answer.each do |q| %>
    <%if q.user_id == current_user.id %>
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <p >
	         			<%= q.answer_body %>
			         	<a href="/questions/<%=q.question_id%>/answers/<%=q.id%>" class="btn btn-primary" role="button">Show</a>
		          	<a href="/questions/<%=q.question_id%>/answers/<%=q.id%>/edit" class="btn btn-primary" role="button">Edit</a>
        				<%= link_to 'Delete',  question_answers_path(q), method: :delete, data: { confirm: 'Are you sure?' } %>
        			 <br>
  			     	</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>	
  <% end %> 
  <br>
    
    
      <div class="color_h2">
        <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <div align="center">
              <h1> My Comments submitted </h1>
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>

      
    
    <% @comment.each do |q| %>
      <%if q.user_id == current_user.id %>
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <p >
		        		<%= q.comment_body %>
		        		<a href="/questions/<%=q.question_id%>/answers/<%=q.answer_id%>" class="btn btn-primary" role="button">Show</a>
          			<a href="/questions/<%=q.question_id%>/answers/<%=q.answer_id%>/comments/<%= q.id%>/edit" class="btn btn-primary" role="button">Edit</a>
        			 <br>
  			     	</p>
            </div>
          </div>
        </div>
      </div>
      <% end %>	
    <% end %>     
   </div>



   <div class="col-sm-2 well">
      <%i=0%>
      <% while i<5 %>
        <div class="well">
          <%j=0%>
          <%h=0%>
            <%while j< rand(1..9)%>
              <br>
              <%j=j+1 %>
            <%end%>
          <p>ADS</p>
            <%while h < j%>
              <br>
              <%h=h+1 %>
            <%end%>
        </div>
      <%i=i+1 %>
      <%end%>
    </div>  
    </div>
  </div>
</div>

  <footer class="container-fluid text-center">
    <p>Copyright@2016 by Adrien Gonzalez</p>
  </footer>

</body>
</html>


