<!DOCTYPE html>
<html lang="en">
<head>
  <title>Rememberme</title>
 
</head>
 <body background="../assets/essai20.png" id="bg" >

<div class="container text-center">

  <div class="row">
      <div class="col-sm-2 well">
      <%i=0%>
      <% while i<5 %>
        <div class="well">
          <%j=0%>
          <%h=0%>
            <%while j< rand(1..9)%>
              <br>
              <%j=j+1 %>
            <%end%>
          <p>ADS</p>
            <%while h < j%>
              <br>
              <%h=h+1 %>
            <%end%>
        </div>
      <%i=i+1 %>
      <%end%>
    </div>
    <div class="col-sm-8">
    
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              <p contenteditable="true">
              	<%= @question.question_title %> 
              </p>     
            </div>
          </div>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-12">
          <div class="panel panel-default text-left">
            <div class="panel-body">
              
              	<a href="/questions/<%= @question.id%>/answers/new" class="btn btn-info" role="button">Add you Answer</a> 
                 
            </div>
          </div>
        </div>
      </div>

  <% @answer.each do |a| %>
  <% if a.question_id == @question.id %>
	<div class="row">      
    <div class="col-sm-7">
      <div class="well">
        <div class="overflow">
          <p>
          	<a href="/questions/<%=@question.id%>/answers/<%=a.id%>">...<%= a.answer_body %> </a>
 		     	</p>
        </div>      
      </div>
    </div>
    <div class="col-sm-3">
      <div class="well">
       <p><a href="/questions/<%= params[:question_id] %>/answers/<%= a.id %>">add 
comments/like</a>
        </p>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="well">
        <p>
          <%= a.get_likes.size %> users like
        </p>     
      </div>
    </div>

  </div>
	 <% end %>   
	<% end %> 
  </div>
  

   <div class="col-sm-2 well">
      <%i=0%>
      <% while i<5 %>
        <div class="well">
          <%j=0%>
          <%h=0%>
            <%while j< rand(1..9)%>
              <br>
              <%j=j+1 %>
            <%end%>
          <p>ADS</p>
            <%while h < j%>
              <br>
              <%h=h+1 %>
            <%end%>
        </div>
      <%i=i+1 %>
      <%end%>
    </div>
  </div>
</div>

